body, p, ul, li
  margin 0

h1, h2, h3, h4, h5, h6
  margin 0
  font-weight 400

a
  text-decoration none
  color inherit

ul
  list-style none
  padding 0

input
  font-family inherit
  font-size inherit
::-webkit-input-placeholder
  color #71a6ff
:-moz-placeholder
  color #71a6ff
::-moz-placeholder
  color #71a6ff
:-ms-input-placeholder
  color #71a6ff

body
  background-color #6194ED
  color #cfe1ff

.card
  background-color #508bf1
  box-sizing border-box
  border solid 1px #7CACFF
  border-radius 15px
  position relative
  padding 0 16px 16px
  box-shadow 0 0 30px 4px #3e7be4 inset
  background-image url(./assets/points@3x.png)
  background-size 8px

.swal-button
  background-color #0071bc
.swal-button:not([disabled]):hover
  background-color #0584d8
.swal-button:active
  background-color #007fd4
.swal-footer
  display flex
  justify-content center
